<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    tools:context="cn.edu.pku.gofish.Activity_add">

    <RelativeLayout
        android:id="@+id/add_top"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <EditText android:id="@+id/addTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="标题"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/add_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <EditText android:id="@+id/addPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="15sp"
            android:hint="价格[轻触以编辑]"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <EditText android:id="@+id/addType"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="15sp"
            android:hint="类别[轻触以编辑]"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/IssueConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/issue_confirm_shape"
            android:gravity="center"
            android:textSize="15sp"
            android:text="确认发布"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <!--中间部分,文字加图片-->
    <RelativeLayout
        android:id="@+id/Content_Layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/add_bottom"
        android:layout_below="@id/add_top"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true" >

            <!-- 设置运行多行 设置圆角图形 黑色字体-->
            <EditText
                android:id="@+id/editText1"
                android:layout_height="120dp"
                android:layout_width="fill_parent"
                android:layout_margin="12dp"
                android:textSize="15sp"
                android:hint="请描述你的宝贝"
                android:maxLength="500"
                android:singleLine="false" />

            <!-- 网格显示图片 行列间距5dp 每列宽度90dp -->
            <GridView
                android:id="@+id/gridView1"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:numColumns="3"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:gravity="center" >
            </GridView>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
